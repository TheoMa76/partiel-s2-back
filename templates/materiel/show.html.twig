{% extends 'base.html.twig' %}

{% block title %}Détails du Matériel{% endblock %}

{% block body %}
<div class="container mx-auto p-8">
    <h1 class="text-3xl font-bold mb-6 text-center">Détails du Matériel</h1>

    <div class="bg-white shadow-md rounded-lg p-6">
        <table class="min-w-full divide-y divide-gray-200">
            <tbody class="bg-white divide-y divide-gray-200">
                <tr>
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-500 uppercase tracking-wider">Id</th>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ materiel.id }}</td>
                </tr>
                <tr>
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-500 uppercase tracking-wider">Nom</th>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ materiel.name }}</td>
                </tr>
                <tr>
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-500 uppercase tracking-wider">Prix</th>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ materiel.prix }}</td>
                </tr>
                 <tr>
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-500 uppercase tracking-wider">En stock</th>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ materiel.stock }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="mt-6 flex justify-center space-x-4">
        <a href="{{ path('app_materiel_index') }}" class="bg-gray-800 text-white py-2 px-4 rounded hover:bg-gray-700">
            Retour à la liste
        </a>

        <a href="{{ path('app_materiel_edit', {'id': materiel.id}) }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700">
            Éditer
        </a>
    </div>
{% endblock %}
